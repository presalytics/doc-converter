    "version": "0.2.0",
    "compounds": [
        {
            "name": "api + worker",
            "configurations": [
                "api-debug-attach",
                "worker-debug-attach"
            ],
            "preLaunchTask": "docker-compose-debug"
        }
    ],
    "configurations": [
        {
            "name": "run-local",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "console": "integratedTerminal"
        },
        {
            "name": "api-debug-attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false
        },
        {
            "name": "worker-debug-attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false
        },
    ],
}